<h2>Edit Question</h2>

<%= form_for @question do |f| %>
<%= f.label :question_content %>
<%= f.text_field :question_content %>
<%= f.hidden_field :user_id, :value => session[:user_id]%>
<%= f.submit "Submit Question"%>
<% end %>
<% if @user.id == @question.user_id || @user.admin == true %>
<p><%= link_to "Delete", question_path(@question),
  :data => {:confirm => "You sure?",
  :method => "delete"} %></p>
  <%end%>
